<Window
    x:Class="Ink_Canvas.NamesInputWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ink_Canvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Title="名单导入 - 抽奖 - Ink Canvas Artistry"
    Width="400"
    Height="500"
    ui:ThemeManager.RequestedTheme="Light"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseModernWindowStyle="True"
    Closing="Window_Closing"
    Loaded="Window_Loaded"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Label Margin="10" Content="请在下方输入名单，每行一人（建议直接粘贴表格姓名列）" Foreground="{DynamicResource PopupWindowForeground}" />
        <TextBox
            Name="TextBoxNames"
            Margin="10,40,10,50"
            AcceptsReturn="True"
            Foreground="{DynamicResource PopupWindowForeground}"
            VerticalScrollBarVisibility="Auto" />
        <Button
            Width="100"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="Button_Click"
            Content="关闭" />
    </Grid>
</Window>
