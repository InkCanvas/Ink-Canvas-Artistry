<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern">
    <ui:ElementTheme x:Key="BoardTheme">Dark</ui:ElementTheme>
    <SolidColorBrush x:Key="BoardBarBackground" Color="Black" Opacity="0.75"/>
    <SolidColorBrush x:Key="BoardBarTitleBackground" Color="#2156c9" Opacity="0.75"/>
    <SolidColorBrush x:Key="BoardBarBorderBrush" Color="White" Opacity="0.6"/>
    <SolidColorBrush x:Key="BoardBarForeground" Color="White"/>
    <Color x:Key="BoardBarForegroundColor">#FFcccccc</Color>
</ResourceDictionary>