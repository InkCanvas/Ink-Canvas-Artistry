<Window
    x:Class="Ink_Canvas.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    xmlns:local="clr-namespace:Ink_Canvas"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    Name="window"
    Title="Ink Canvas Artistry 画板"
    Width="1440"
    Height="5500"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    Closing="Window_Closing"
    Foreground="Black"
    KeyDown="Window_KeyDown"
    Loaded="Window_Loaded"
    MouseWheel="Window_MouseWheel"
    PreviewKeyDown="Main_Grid_PreviewKeyDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Stylus.IsPressAndHoldEnabled="False"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--  资源中添加命令  -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/BoardDrawShapeImageDictionary.xaml" />
                <ResourceDictionary Source="/Resources/DrawShapeImageDictionary.xaml" />
				<ResourceDictionary Source="/Resources/IconImageDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <RoutedUICommand x:Key="HotKey_Command_Undo" Text=" " />
            <RoutedUICommand x:Key="HotKey_Command_Redo" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToSelect" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToEraser" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen1" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen2" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen3" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen4" Text=" " />
            <RoutedUICommand x:Key="HotKey_ChangeToPen5" Text=" " />
            <RoutedUICommand x:Key="HotKey_DrawLine" Text=" " />
        </ResourceDictionary>
    </Window.Resources>
    <!--  输入命令绑定  -->
    <Window.InputBindings>
        <KeyBinding Key="Z" Command="{StaticResource HotKey_Command_Undo}" Modifiers="Control" />
        <KeyBinding Key="Y" Command="{StaticResource HotKey_Command_Redo}" Modifiers="Control" />
        <KeyBinding Key="S" Command="{StaticResource HotKey_ChangeToSelect}" Modifiers="Alt" />
        <KeyBinding Key="E" Command="{StaticResource HotKey_ChangeToEraser}" Modifiers="Alt" />
        <KeyBinding Key="D1" Command="{StaticResource HotKey_ChangeToPen1}" Modifiers="Alt" />
        <KeyBinding Key="D2" Command="{StaticResource HotKey_ChangeToPen2}" Modifiers="Alt" />
        <KeyBinding Key="D3" Command="{StaticResource HotKey_ChangeToPen3}" Modifiers="Alt" />
        <KeyBinding Key="D4" Command="{StaticResource HotKey_ChangeToPen4}" Modifiers="Alt" />
        <KeyBinding Key="D5" Command="{StaticResource HotKey_ChangeToPen5}" Modifiers="Alt" />
        <KeyBinding Key="L" Command="{StaticResource HotKey_DrawLine}" Modifiers="Alt" />
    </Window.InputBindings>
    <!--  命令执行方法绑定  -->
    <Window.CommandBindings>
        <CommandBinding CanExecute="CommandBinding_CanExecute" Command="{StaticResource HotKey_Command_Undo}" Executed="HotKey_Undo" />
        <CommandBinding CanExecute="CommandBinding_CanExecute" Command="{StaticResource HotKey_Command_Redo}" Executed="HotKey_Redo" />
        <CommandBinding CanExecute="CommandBinding_CanExecute" Command="{StaticResource HotKey_ChangeToSelect}" Executed="KeyChangeToSelect" />
        <CommandBinding CanExecute="CommandBinding_CanExecute" Command="{StaticResource HotKey_ChangeToEraser}" Executed="KeyChangeToEraser" />
        <CommandBinding CanExecute="CommandBinding_CanExecute" Command="{StaticResource HotKey_DrawLine}" Executed="KeyDrawLine" />
    </Window.CommandBindings>
    <Grid x:Name="Main_Grid" Background="#01FFFFFF">
        <!--  // 画板幕布 //  -->
        <Grid Name="GridBackgroundCoverHolder">
            <Grid Name="GridBackgroundCover" Background="#1F1F1F" Visibility="Collapsed" />
        </Grid>
        <!--  // 画板 //  -->
        <InkCanvas x:Name="inkCanvas"
            Background="Transparent"
            Cursor="Pen"
            EditingModeChanged="inkCanvas_EditingModeChanged"
            ForceCursor="False"
            IsManipulationEnabled="True"
            ManipulationCompleted="Main_Grid_ManipulationCompleted"
            ManipulationDelta="Main_Grid_ManipulationDelta"
            ManipulationInertiaStarting="inkCanvas_ManipulationInertiaStarting"
            ManipulationStarting="inkCanvas_ManipulationStarting"
            MouseDown="inkCanvas_MouseDown"
            MouseMove="inkCanvas_MouseMove"
            MouseUp="inkCanvas_MouseUp"
            PreviewTouchDown="inkCanvas_PreviewTouchDown"
            PreviewTouchUp="inkCanvas_PreviewTouchUp"
            SelectionChanged="inkCanvas_SelectionChanged"
            StrokeCollected="inkCanvas_StrokeCollected"
            TouchDown="Main_Grid_TouchDown"
            TouchMove="inkCanvas_TouchMove"
            TouchUp="Main_Grid_TouchUp" />
        <!--  // 选择选项窗口 //  -->
        <Grid Visibility="{Binding ElementName=inkCanvas, Path=Visibility}">
            <Grid
                Name="GridInkCanvasSelectionCover"
                Margin="-36,0,36,0"
                Background="#01FFFFFF"
                IsManipulationEnabled="True"
                ManipulationCompleted="GridInkCanvasSelectionCover_ManipulationCompleted"
                ManipulationDelta="GridInkCanvasSelectionCover_ManipulationDelta"
                ManipulationStarting="GridInkCanvasSelectionCover_ManipulationStarting"
                MouseDown="GridInkCanvasSelectionCover_MouseDown"
                MouseUp="GridInkCanvasSelectionCover_MouseUp"
                Opacity="0.01"
                PreviewTouchDown="GridInkCanvasSelectionCover_PreviewTouchDown"
                PreviewTouchUp="GridInkCanvasSelectionCover_PreviewTouchUp"
                TouchDown="GridInkCanvasSelectionCover_TouchDown"
                TouchUp="GridInkCanvasSelectionCover_TouchUp"
                Visibility="Visible" />
            <Border
                Name="BorderStrokeSelectionControl"
                Height="80"
                Margin="0,100,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{DynamicResource FloatBarBackground}"
                BorderBrush="{DynamicResource FloatBarBorderBrush}"
                BorderThickness="1"
                CornerRadius="5"
                Visibility="{Binding ElementName=GridInkCanvasSelectionCover, Path=Visibility}">
                <Viewbox Margin="0,-2.5">
                    <ikw:SimpleStackPanel Height="60" Orientation="Horizontal" Spacing="10">
                        <Border
                            Name="BorderStrokeSelectionClone"
                            Width="40"
                            Margin="0,2,-9,2"
                            Background="Transparent"
                            CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}"
                            MouseDown="Border_MouseDown"
                            MouseUp="BorderStrokeSelectionClone_MouseUp">
                            <ikw:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ui:FontIcon
                                    Width="25"
                                    Height="25"
                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                    Foreground="{DynamicResource FloatBarForeground}"
                                    Glyph="&#xe8c8;" />
                                <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="{DynamicResource FloatBarForeground}" Text="克隆" />
                            </ikw:SimpleStackPanel>
                        </Border>
                        <Border
                            Name="BorderStrokeSelectionCloneToNewBoard"
                            Width="40"
                            Margin="0,2,-9,2"
                            Background="Transparent"
                            CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}"
                            MouseDown="Border_MouseDown"
                            MouseUp="BorderStrokeSelectionCloneToNewBoard_MouseUp"
                            Visibility="{Binding Visibility, ElementName=GridBackgroundCover}">
                            <ikw:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ui:FontIcon
                                    Width="25"
                                    Height="25"
                                    Margin="1,0,0,0"
                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                    FontSize="18"
                                    Foreground="{DynamicResource FloatBarForeground}"
                                    Glyph="&#xf413;" />
                                <TextBlock HorizontalAlignment="Center" FontSize="8" Foreground="{DynamicResource FloatBarForeground}" Text="克隆至新页" />
                            </ikw:SimpleStackPanel>
                        </Border>
                        <Border Width="1" Height="45" Background="{DynamicResource FloatBarForeground}" BorderBrush="{DynamicResource FloatBarForeground}" />
                        <Border Height="40" CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}">
                            <ikw:SimpleStackPanel Margin="0,-10" VerticalAlignment="Center" Spacing="2">
                                <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="10">
                                    <Image Height="22" MouseDown="Border_MouseDown" MouseUp="ImageRotate45_MouseUp" Source="{DynamicResource Rotate45DrawingImage}" />
                                    <Image Height="22" MouseDown="Border_MouseDown" MouseUp="ImageRotate90_MouseUp" Source="{DynamicResource Rotate90DrawingImage}" />
                                </ikw:SimpleStackPanel>
                                <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="{DynamicResource FloatBarForeground}" Text="旋转" />
                            </ikw:SimpleStackPanel>
                        </Border>
                        <Border Width="1" Height="45" Background="{DynamicResource FloatBarForeground}" BorderBrush="{DynamicResource FloatBarForeground}" />
                        <Border Height="40" CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}">
                            <ikw:SimpleStackPanel Margin="0,-10" VerticalAlignment="Center">
                                <ikw:SimpleStackPanel Orientation="Horizontal">
                                    <Image
                                        Width="25"
                                        Height="25"
                                        MouseDown="Border_MouseDown"
                                        MouseUp="ImageFlipHorizontal_MouseUp"
                                        Source="{DynamicResource FlipDrawingImage}" />
                                    <Image
                                        Width="25"
                                        Height="25"
                                        Margin="5,0,0,0"
                                        MouseDown="Border_MouseDown"
                                        MouseUp="ImageFlipVertical_MouseUp"
                                        RenderTransformOrigin="0.5,0.5"
                                        Source="{DynamicResource FlipDrawingImage}">
                                        <Image.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform />
                                                <SkewTransform />
                                                <RotateTransform Angle="90" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </Image.RenderTransform>
                                    </Image>
                                </ikw:SimpleStackPanel>
                                <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="{DynamicResource FloatBarForeground}" Text="翻转" />
                            </ikw:SimpleStackPanel>
                        </Border>
                        <Border Width="1" Height="45" Background="{DynamicResource FloatBarForeground}" BorderBrush="{DynamicResource FloatBarForeground}" />
                        <Border Height="40" CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}">
                            <ikw:SimpleStackPanel Margin="0,-10" VerticalAlignment="Center" Spacing="5">
                                <ikw:SimpleStackPanel Orientation="Horizontal" Spacing="13">
                                    <Grid MouseDown="Border_MouseDown" MouseUp="GridPenWidthDecrease_MouseUp">
                                        <ui:SymbolIcon Foreground="{DynamicResource FloatBarForeground}" Symbol="Edit" />
                                        <TextBlock
                                            Margin="0,0,-2,-7"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="15"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="-" />
                                    </Grid>
                                    <Grid MouseDown="Border_MouseDown" MouseUp="GridPenWidthIncrease_MouseUp">
                                        <ui:SymbolIcon Foreground="{DynamicResource FloatBarForeground}" Symbol="Edit" />
                                        <TextBlock
                                            Margin="0,0,-3,-4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontSize="11"
                                            Foreground="{DynamicResource FloatBarForeground}"
                                            Text="+" />
                                    </Grid>
                                    <Grid MouseDown="Border_MouseDown" MouseUp="GridPenWidthRestore_MouseUp">
                                        <ui:SymbolIcon Foreground="{DynamicResource FloatBarForeground}" Symbol="Edit" />
                                        <Image
                                            Width="8"
                                            Margin="0,0,-2,-2"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Source="{DynamicResource AndroidRefreshDrawingImage}" />
                                    </Grid>
                                </ikw:SimpleStackPanel>
                                <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="{DynamicResource FloatBarForeground}" Text="画笔粗细" />
                            </ikw:SimpleStackPanel>
                        </Border>
                        <Border Width="1" Height="45" Background="{DynamicResource FloatBarForeground}" BorderBrush="{DynamicResource FloatBarForeground}" />
                        <Border
                            Width="40"
                            Margin="-8,0,0,0"
                            CornerRadius="{Binding ElementName=BorderStrokeSelectionControl, Path=CornerRadius}"
                            MouseDown="Border_MouseDown"
                            MouseUp="BorderStrokeSelectionDelete_MouseUp">
                            <ikw:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ui:FontIcon
                                    Width="25"
                                    Height="25"
                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                    Foreground="{DynamicResource FloatBarForeground}"
                                    Glyph="&#xe74d;" />
                                <TextBlock HorizontalAlignment="Center" FontSize="10" Foreground="{DynamicResource FloatBarForeground}" Text="删除" />
                            </ikw:SimpleStackPanel>
                        </Border>
                    </ikw:SimpleStackPanel>
                </Viewbox>
            </Border>
        </Grid>
        <!--  // 画板界面 //  -->
        <Grid Visibility="{Binding ElementName=GridBackgroundCoverHolder, Path=Visibility}">
            <!--  左下角  -->
            <Viewbox x:Name="ViewboxBlackboardLeftSide"
                Height="55"
                Margin="3,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom">
                <Viewbox.LayoutTransform>
                    <ScaleTransform x:Name="ViewboxBlackboardLeftSideScaleTransform" ScaleX="1" ScaleY="1" />
                </Viewbox.LayoutTransform>
                <Grid x:Name="BlackboardLeftSide"
                    Height="55"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Opacity="0.75"
                    Visibility="Visible">
                    <Grid.Resources>
                        <!--  定义 SolidColorBrush 资源  -->
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundKey}" Color="{DynamicResource BoardBarButtonBackgroundKey}" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPointerOverKey}" Color="{DynamicResource BoardBarButtonBackgroundPointerOverKey}" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPressedKey}" Color="{DynamicResource BoardBarButtonButtonBackgroundPressedKey}" />
                        <!--  定义按钮样式  -->
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundKey}}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundPointerOverKey}}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundPressedKey}}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>
                    <ikw:SimpleStackPanel Orientation="Horizontal">
                        <Button x:Name="BtnWhiteBoardSwitchPrevious"
                            Width="60"
                            Height="55"
                            Padding="0"
                            BorderThickness="0"
                            Click="BtnWhiteBoardSwitchPrevious_Click"
                            IsEnabledChanged="Element_IsEnabledChanged">
                            <Border
                                Width="60"
                                Height="55"
                                Background="{DynamicResource BoardBarBackground}"
                                BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                BorderThickness="1,1,0.25,1"
                                CornerRadius="5,0,0,5">
                                <Grid Margin="5">
                                    <ui:FontIcon
                                        Width="26"
                                        Height="26"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource FluentIconFontFamily}"
                                        FontSize="24"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Glyph="&#xe760;" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="12"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Text="上一页" />
                                </Grid>
                            </Border>
                        </Button>
                        <Border
                            Width="58"
                            Height="55"
                            Background="{DynamicResource BoardBarBackground}"
                            BorderBrush="{DynamicResource BoardBarBorderBrush}"
                            BorderThickness="0,1,0.25,1">
                            <Grid Margin="0,5">
                                <ikw:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        Name="TextBlockWhiteBoardIndexInfo"
                                        Margin="0,4,0,2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="15"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Text="1 / 1" />
                                    <TextBlock
                                        Margin="0,3,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Text="页码" />
                                </ikw:SimpleStackPanel>
                            </Grid>
                        </Border>
                        <Button
                            Width="60"
                            Height="55"
                            Padding="0"
                            BorderThickness="0"
                            Click="BtnWhiteBoardSwitchNext_Click"
                            IsEnabledChanged="Element_IsEnabledChanged">
                            <Border
                                Width="60"
                                Height="55"
                                Background="{DynamicResource BoardBarBackground}"
                                BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                BorderThickness="0,1,1,1"
                                CornerRadius="0,5,5,0">
                                <Grid Margin="5">
                                    <ui:FontIcon x:Name="BoardLeftPannelNextPage1"
                                        Width="26"
                                        Height="26"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource FluentIconFontFamily}"
                                        FontSize="24"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Glyph="&#xecc8;"
                                        IsEnabled="True"
                                        IsEnabledChanged="Element_IsEnabledChanged" />
                                    <ui:FontIcon x:Name="BoardLeftPannelNextPage2"
                                        Width="0"
                                        Height="26"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource FluentIconFontFamily}"
                                        FontSize="24"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Glyph="&#xe761;"
                                        Opacity="{Binding ElementName=BoardLeftPannelNextPage1, Path=Opacity}" />
                                    <TextBlock x:Name="BoardLeftPannelNextPageTextBlock"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="12"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Opacity="{Binding ElementName=BoardLeftPannelNextPage1, Path=Opacity}"
                                        Text="加页" />
                                </Grid>
                            </Border>
                        </Button>
                        <Button
                            Width="55"
                            Height="55"
                            Margin="5,0,0,0"
                            Padding="0"
                            BorderThickness="0"
                            Click="ImageBlackboard_Click">
                            <Border
                                Width="55"
                                Height="55"
                                Background="{DynamicResource BoardBarBackground}"
                                BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="5">
                                <Grid Margin="5">
                                    <ui:FontIcon
                                        Width="26"
                                        Height="26"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource FluentIconFontFamily}"
                                        FontSize="24"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Glyph="&#xe944;" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="12"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Text="退出" />
                                </Grid>
                            </Border>
                        </Button>
                    </ikw:SimpleStackPanel>
                </Grid>
            </Viewbox>
            <!--  中间  -->
            <Viewbox x:Name="ViewboxBlackboardCenterSide"
                Height="55"
                Margin="3,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <Viewbox.LayoutTransform>
                    <ScaleTransform x:Name="ViewboxBlackboardCenterSideScaleTransform" ScaleX="1" ScaleY="1" />
                </Viewbox.LayoutTransform>
                <Grid x:Name="BlackboardCenterSide"
                    Height="55"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Visibility="Visible">
                    <Grid.Resources>
                        <!--  定义 SolidColorBrush 资源  -->
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundKey}" Color="{DynamicResource BoardBarButtonBackgroundKey}" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPointerOverKey}" Color="{DynamicResource BoardBarButtonBackgroundPointerOverKey}" />
                        <SolidColorBrush x:Key="{x:Static ui:ThemeKeys.ButtonBackgroundPressedKey}" Color="{DynamicResource BoardBarButtonButtonBackgroundPressedKey}" />
                        <!--  定义按钮样式  -->
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundKey}}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundPointerOverKey}}" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="{StaticResource {x:Static ui:ThemeKeys.ButtonBackgroundPressedKey}}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>
                    <ikw:SimpleStackPanel Orientation="Horizontal">

                        <Button
                            Width="60"
                            Height="55"
                            Padding="0"
                            BorderThickness="0"
                            Click="TwoFingerGestureBorder_Click">
                            <Border
                                Width="60"
                                Height="55"
                                Background="{DynamicResource BoardBarBackground}"
                                BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                BorderThickness="1,1,0.25,1"
                                CornerRadius="5,0,0,5">
                                <Grid Margin="5">
                                    <ui:FontIcon
                                        Width="26"
                                        Height="26"
                                        VerticalAlignment="Top"
                                        FontFamily="{StaticResource FluentIconFontFamily}"
                                        FontSize="28"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Glyph="&#xf271;"
                                        Opacity="{Binding ElementName=EnableTwoFingerGestureBtn, Path=Opacity}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Bottom"
                                        FontSize="12"
                                        Foreground="{DynamicResource BoardBarForeground}"
                                        Text="手势" />
                                </Grid>
                            </Border>
                        </Button>
                        <Grid Width="0" Margin="0,0,0,5">
                            <Viewbox
                                Name="BoardTwoFingerGestureBorder"
                                Height="173"
                                Margin="-119,-177,-71,0"
                                VerticalAlignment="Top"
                                Visibility="Visible">
                                <Border
                                    Width="149"
                                    Height="135"
                                    Background="{DynamicResource BoardBarBackground}"
                                    BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                    <ikw:SimpleStackPanel>
                                        <Border
                                            Margin="-1,-1,-1,0"
                                            Padding="15,5"
                                            Background="{DynamicResource BoardBarTitleBackground}"
                                            BorderBrush="{DynamicResource BoardBarBorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="5,5,0,0">
                                            <TextBlock
                                                FontSize="11"
                                                FontWeight="Bold"
                                                Foreground="{DynamicResource BoardBarForeground}"
                                                Text="手势功能"
                                                TextAlignment="Left" />
                                        </Border>
                                        <ikw:SimpleStackPanel Margin="10,4,10,0" Spacing="-2.5">
                                            <ikw:SimpleStackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="8">
                                                <ui:FontIcon
                                                    Width="20"
                                                    Height="20"
                                                    Margin="0,4,0,2"
                                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                                    FontSize="16"
                                                    Foreground="{DynamicResource BoardBarForeground}"
                                                    Glyph="&#xe716;" />
                                                <Label VerticalAlignment="Center" Content="多指书写" FontSize="12" Foreground="{DynamicResource BoardBarForeground}" />
                                                <Viewbox Width="36" Height="25">
                                                    <ui:ToggleSwitch
                                                        Name="BoardToggleSwitchEnableMultiTouchMode"
                                                        Width="42"
                                                        MinWidth="0"
                                                        ui:ThemeManager.RequestedTheme="{DynamicResource BoardTheme}"
                                                        IsOn="False"
                                                        OffContent=""
                                                        OnContent=""
                                                        Toggled="ToggleSwitchEnableMultiTouchMode_Toggled" />
                                                </Viewbox>
                                            </ikw:SimpleStackPanel>
                                            <ikw:SimpleStackPanel x:Name="BoardTwoFingerGestureSimpleStackPanel"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Opacity="{Binding ElementName=TwoFingerGestureSimpleStackPanel, Path=Opacity}"
                                                Orientation="Horizontal"
                                                Spacing="8">
                                                <ui:FontIcon
                                                    Width="20"
                                                    Height="20"
                                                    Margin="0,4,0,2"
                                                    FontFamily="{StaticResource FluentIconFontFamily}"
                                                    FontSize="16"
                                                    Foreground="{DynamicResource BoardBarForeground}"
                                                    Glyph="&#xe7c2;" />
                                                <Label VerticalAlignment="Center" Content="双指移动" FontSize="12" Foreground="{DynamicResource BoardBarForeground}" />
                                                <Viewbox Width="36" Height="25">
                                                    <ui:ToggleSwitch
